{
    "manifest_version": 2,
    "name": "FreshRSS RSS Finder",
    "description": "Retreive RSS feeds URLs from WebSite and import to FreshRSS",
    "version": "2.0.0",
    "author": "@shevabam",
    "homepage_url": "https://github.com/shevabam/get-rss-feed-url-extension",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "activeTab",
        "notifications",
		"storage"
    ],
    "browser_action": {
        "default_icon" : "img/icon_default.png",
        "default_popup": "popup.html",
        "default_title": "View RSS feeds"
    },
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "icons": {
        "128" : "img/icon_128.png"
    },
	"options_page": "options.html"
}